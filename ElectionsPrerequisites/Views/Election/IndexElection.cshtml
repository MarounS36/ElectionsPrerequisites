@model IEnumerable<ElectionsPrerequisites.Models.Dto.ElectionDTO>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Election List</h1>
        </div>
        <div class="col text-end pt-1">
            <a class="btn btn-outline-primary" asp-controller="Election" asp-action="CreateElection"><i class="bi bi-plus-square-fill"></i> Create new Election</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ElectionName</td>
                    <td>
                        <a asp-controller="Election" asp-action="UpdateElection" asp-route-electionID="@item.Id" class="btn btn-outline-primary btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Election" asp-action="DeleteElection" asp-route-electionID="@item.Id"  class="btn btn-outline-primary btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>